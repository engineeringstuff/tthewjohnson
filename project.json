{
	"name": "tthewjohnson",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "web/tthewjohnson/src",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "web/tthewjohnson",
				"commands": ["vite build"],
				"parallel": false
			}
		},
		"clean": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "web/tthewjohnson",
				"commands": ["echo cleanup"],
				"parallel": false
			}
		},
		"deploy": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "web/tthewjohnson",
				"commands": [
					"wrangler pages publish ./.svelte-kit/cloudflare --project-name tthewjohnson --commit-dirty=true"
				],
				"parallel": false
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["web/tthewjohnson/**/*.{ts,tsx,svelte}"]
			}
		},
		"serve": {
			"executor": "nx:run-commands",
			"dependsOn": [
				{
					"target": "build",
					"projects": "self"
				}
			],
			"options": {
				"cwd": ".",
				"commands": [
					"npx chokidar \"**/tthewjohnson/**/*.svelte\" \"**/tthewjohnson/**/*.ts\" \"**/tthewjohnson/**/*.md\" \"**/tthewjohnson/**/*.css\" -c \"yarn run nx run tthewjohnson:build\" -i \"**/.svelte-kit/**/*\" -i \"**/.output/**/*\" -i \"**/dist/**/*\"",
					"yarn functions:kill 2>/dev/null; yarn functions:serve",
					"wrangler pages dev web/tthewjohnson/.svelte-kit/cloudflare --local --live-reload true",
					"yarn proxy:kill 2>/dev/null; yarn proxy"
				],
				"parallel": true
			}
		},
		"test": {
			"executor": "@nrwl/vite:test",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"config": "vite.config.ts"
			}
		}
	},
	"tags": []
}
